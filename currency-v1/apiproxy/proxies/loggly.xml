<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="loggly">

	<Flows>
		<Flow name="POST log message">
			<Condition>
				(request.verb = "POST") and 
				(proxy.pathsuffix MatchesPath "/")
			</Condition>
			<Response>
				<Step>
					<Name>AssignMessage.SetLogglyResponse</Name>
				</Step>
			</Response>
		</Flow>
		<Flow name="404">
			<Request>
				<Step>
					<Name>AssignMessage.SetApigee404ErrorVariables</Name>
				</Step>
				<Step>
					<Name>RaiseFault.GoToFaultRules</Name>
				</Step>
			</Request>
		</Flow>
	</Flows>

	<RouteRule name="empty">
	</RouteRule>

	<HTTPProxyConnection>
		<BasePath>/currency/v1/logs</BasePath>
		<VirtualHost>secure</VirtualHost>
	</HTTPProxyConnection>
</ProxyEndpoint>
